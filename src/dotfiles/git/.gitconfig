[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
	co = checkout
	br = branch
	lg=log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(red)%h%C(r) â€”â€” %C(bold blue)%an%C(r): %C(white)%s%C(r) %C(dim white) %C(bold green)(%ar)%C(r) %C(bold yellow)%d%C(r)' --all
	ci = commit
	st = status
	amend = !git add -A && git commit --amend --no-edit
	branch-create = "!bc() { git checkout -b $USER/$1; }; bc"
	branch-delete = "!bd() { git branch -D $1; }; bd"
	branch-delete-remote= "!bdr() { git push origin :$1; }; bdr"
	commit-review = "!cr() { git ci -m 'ðŸ‘Œ  PR review changes: '$1; }; cr"
	squash = "!f(){ git reset --soft HEAD~${1} && git commit --edit -m\"$(git log --format=%B --reverse HEAD..HEAD@{1})\"; };f"
